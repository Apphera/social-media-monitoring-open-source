          <thead>
          <tr>
            <th><%= t(:name) %></th>
            <th><%= t(:street) %></th>
            <th><%= t(:postalcode) %></th>
            <th><%= t(:city) %></th>
            <th><%= t(:phone) %></th>
            <th><%= t(:distance) %></th>
            <th><%= t(:remove) %></th>
          </tr>
          </thead>

          <tbody>
          <% begin %>
              <% @organizations.each do |organization| %>
                  <tr>
                    <td><a href="/reviews/<%= organization.id %>"><%= organization.name %></a>
                    </td>
                    <td><%= organization.street %></td>
                    <td><%= organization.postalcode %></td>
                    <td><%= organization.city %></td>
                    <td><%= organization.phone1 %></td>
                    <td><%= organization.distance_to(@org).round(2) rescue nil %> Km</td>
                    <td><%= link_to t(:remove), organization, confirm: t(:are_you_sure), method: :delete, :class => 'btn btn-small' %></td>
                  </tr>
              <% end %>
          <% rescue %>
          <% end %>
          </tbody>
        </table>

        <% unless @organizations.nil? %>
            <%= paginate @organizations %>
        <% end %>

        <br/>
      </div>
    </div>
